@page "/Admin/Alunos/Detail/{AlunoId:int}"
@inherits DetailsPage

<section class="content-header">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-6">
                <h1>Detalhe</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="Admin/Alunos/List">Alunos</a></li>
                    <li class="breadcrumb-item active">Info</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>
<section class="content">
    <div class="container-fluid">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">
                    <i class="fa fa-user"></i>
                    <b class="ml-3" style="font-size:15pt">Dados do aluno</b>
                </h3>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-sm-4 mb-3">
                        <label for="Matricula">Matricula</label>
                        <div id="Matricula">@Aluno.AlunoInfo.Matricula</div>
                    </div>
                    <div class="col-sm-4 mb-3">
                        <label for="Nome">Nome</label>
                        <div id="Nome">@Aluno.AlunoInfo.Nome.ToUpper()</div>
                    </div>

                    <div class="col-sm-4 mb-3">
                        <label for="Curso">Curso</label>
                        <div id="Curso">@Aluno.AlunoInfo.Curso.Nome.ToUpper()</div>
                    </div>
                    
                </div>
                <div class="card card-widget collapsed-card">
                    <div class="card-header bg-gradient-info" data-card-widget="collapse">
                        <div class="user-block">
                            <i class="ion ion-ios-book-outline mr-2"></i> Cursando <b>@Aluno.Disciplinas.Count</b>  disciplinas
                        </div>
                        <!-- /.user-block -->
                        <div class="card-tools">
                            <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                <i class="fas fa-plus"></i>
                            </button>
                        </div>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <table id="example2" class="table table-striped table-bordered dataTable">
                            <thead>
                                <tr>
                                    <th>Cód. Disciplina</th>
                                    <th> Disciplina</th>
                                    <th>Curso</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var disciplina in Aluno.Disciplinas)
                                {
                                    <tr>
                                        <td>@disciplina.Id</td>
                                        <td>@disciplina.Nome.ToUpper()</td>
                                        <td>@Aluno.AlunoInfo.Curso.Nome.ToUpper()</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <!-- /.card-footer -->
                </div>
            </div>
        </div>

        <!-- /.card-body -->
    </div>
</section>