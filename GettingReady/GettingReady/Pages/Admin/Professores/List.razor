@page "/Admin/Professores/List"
@inherits ListProfessor

<section class="content-header">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-6">
                <h1>Todos os Professores</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item active">Professores</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>
<section class="content">
    <div class="container-fluid">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">
                    <i class="fa fa-list"></i>
                    <b class="ml-3" style="font-size:15pt">Lista de Professores</b>
                </h3>
                <a href="/Admin/Professores/Create" class="btn btn-info btn-xs" style="float:right"><span><i class="fa fa-plus"></i></span></a>
            </div>
            <div class="card-body">
                @if (Professores.Count > 0)
                {
                    <table id="example2" class="table table-striped table-bordered dataTable">
                        <thead>
                            <tr>
                                <th @onclick="@(() => SortTable("Matricula"))">Matrícula <span class="fa @(SortIcon("Matricula"))"></span></th>
                                <th @onclick="@(() => SortTable("Nome"))">Nome <span class="fa @(SortIcon("Nome"))"></span></th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var Professor in Professores)
                            {
                                <tr>
                                    <td>@Professor.Matricula</td>
                                    <td>@Professor.Nome.ToUpperInvariant()</td>
                                    <td style="width:105px;">
                                        <button type="button" class="btn btn-outline-info btn-sm" @onclick="(()=>NavigateTo(Professor.Matricula))"><span><i class="fa fa-eye"></i></span></button>
                                        <button type="button" class="btn btn-outline-warning btn-sm"><span><i class="fa fa-edit"></i></span></button>
                                        <button type="button" class="btn btn-outline-danger btn-sm" @onclick="(()=>DeleteProfessor(Professor.Matricula))"><span><i class="fa fa-trash"></i></span></button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                @if (Professores.Count == 0)
                {
                    <p class="">Nenhum professor cadastrado!</p>
                    <table id="example2" class=" mt-4 table table-striped table-bordered dataTable">
                        <thead>
                            <tr>
                                <th @onclick="@(() => SortTable("Matricula"))">Id <span class="fa @(SortIcon("Matricula"))"></span></th>
                                <th @onclick="@(() => SortTable("Nome"))">Nome <span class="fa @(SortIcon("Nome"))"></span></th>
                                <th @onclick="@(() => SortTable("Email"))">Curso <span class="fa @(SortIcon("Curso"))"></span></th>
                                <th></th>
                            </tr>
                        </thead>
                    </table>
                }
                @if (Professores == null)
                {
                    <p class="">Buscando professores aguarde...</p>
                }
            </div>
            <!-- /.card-body -->
        </div>
    </div><!-- /.container-fluid -->
</section>