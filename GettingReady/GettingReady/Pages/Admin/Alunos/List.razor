@page "/Alunos/List"
@inherits ListPage

<section class="content-header">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-6">
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item active">Alunos</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>
<section class="content">
    <div class="container-fluid">
        <div class="card card-lightblue">
            <div class="card-header">
                    <h3 class="card-title">
                        <i class="fa fa-list"></i>
                        <b class="ml-3" style="font-size:15pt">Lista de alunos</b>
                    </h3>
                    <a href="Alunos/Create">
                        <button type="button" class="btn btn-outline-light btn-xs" style="float:right"><span><i class="fa fa-plus"></i></span></button>
                    </a>
            </div>
            <div class="card-body">
                @if (Alunos.Count > 0)
                {
                    <table id="example2" class="table table-striped table-bordered dataTable">
                        <thead>
                            <tr>
                                <th @onclick="@(() => SortTable("Matricula"))">Matrícula <span class="fa @(SortIcon("Matricula"))"></span></th>
                                <th @onclick="@(() => SortTable("Nome"))">Nome <span class="fa @(SortIcon("Nome"))"></span></th>
                                <th @onclick="@(() => SortTable("Email"))">Curso <span class="fa @(SortIcon("Curso"))"></span></th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var Aluno in Alunos)
                            {
                                <tr>
                                    <td>@Aluno.Matricula</td>
                                    <td>@Aluno.Nome.ToUpper()</td>
                                    <td>@Aluno.areaId</td>
                                    <td style="width:90px;">
                                        <button type="button" class="btn btn-outline-warning btn-sm"><span><i class="fa fa-edit"></i></span></button>
                                        <button type="button" class="btn btn-outline-danger btn-sm"><span><i class="fa fa-trash"></i></span></button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                @if (Alunos.Count == 0)
                {
                    <p class="">Nenhum aluno cadastrado!</p>
                    <table id="example2" class=" mt-4 table table-striped table-bordered dataTable">
                        <thead>
                            <tr>
                                <th @onclick="@(() => SortTable("Matricula"))">Matrícula <span class="fa @(SortIcon("Matricula"))"></span></th>
                                <th @onclick="@(() => SortTable("Nome"))">Nome <span class="fa @(SortIcon("Nome"))"></span></th>
                                <th @onclick="@(() => SortTable("Email"))">Curso <span class="fa @(SortIcon("Curso"))"></span></th>
                                <th></th>
                            </tr>
                        </thead>
                    </table>
                }
                else
                {
                    <p class="">Buscando alunos aguarde...</p>
                }
            </div>
            <!-- /.card-body -->
        </div>
    </div><!-- /.container-fluid -->
</section>